Screen {
    align: center top;
    background: $background;
}
#game-container {
    width: auto;
    height: auto;
    align: center top;
}
#board-container {
    width: auto;
    height: auto;
    border: round $primary;
    padding: 1;
    background: $surface;
}
ChessBoard {
    width: auto;
    height: auto;
    background: transparent;
}
#sidebar-container {
    width: 30;
    height: 100%;
    min-height: 26;
    margin-left: 2;
    border: round $primary;
    padding: 1;
    background: $surface;
}
#sidebar {
    width: 100%;
    height: 100%;
    min-height: 20;
    background: transparent;
    color: $text;
}
Footer {
    height: 1;
}
